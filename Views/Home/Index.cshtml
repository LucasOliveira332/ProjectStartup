
@model IQueryable<Adicionando.Models.Igredientes>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!doctype html>
<html lang="en">
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">
    <!-- CSS -->
    <link  href="/css/site.css" rel="stylesheet">
    <!-- CSS -->
    <title>Hello, world!</title>
  </head>
  <body>
    <div id="nav">
      <ul>
        <li class="nav-item">
          <a class="nav-link" href="/Home/igredientes">Adicionar Igredientes</a>
        </li>
        <li class="nav-item bg">
          <a class="nav-link" href="lanches.html">Adicionar lanche</a>
        </li>
        <li class="">
          <a class="nav-link" href="/Home/index">Home</a>
        </li>
      </ul>
      <div class="clear"></div>
    </div>
    <div id="container">
      <table class="table table-borderless mt-5">
          <tr>
            <th class="title-1">#</th>
            <th class="title-2">LANCHES</th>
            <th class="title-3">VALOR</th>  
          </tr>
          <tr>
              <td></th>
              <td></td>
              <td></td>
          </tr>
          <caption> Lista de Lanches</caption>
      </table>
      <hr>
      <table class="table table-borderless">
        <thead>
          <tr>
              <th class="title-1">#</th>
              <th class="title-2">IGREDIENTES</th>
              <th class="title-3">VALOR</th>  
          </tr>
        </thead>
        <tbody>
        @foreach (var u in Model)
        {
            <tr>
              <td>@u.Id</td>
              <td>@u.Nome</td>
              <td>@u.Price</td>
              <td><a class="btn btn-secondary" asp-action="igredientes" asp-route-id="@u.Id">Alterar</a></td>
              <td><a class="btn btn-danger">Excluir</a></td> 
            </tr>
        }
        </tbody>
          <caption> Lista de Igredientes</caption>
      </table>
      <hr>
    </div>
        
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
